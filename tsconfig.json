{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codegena/oapi3ts": [
        "dist/oapi3ts",
        "libs/oapi3ts/src/index.ts"
      ],
      "@codegena/oapi3ts/*": [
        "dist/oapi3ts/*",
        "libs/oapi3ts/src/*"
      ],
      "@codegena/ng-api-service": [
        "dist/ng-api-service",
        "libs/ng-api-service/src/index.ts"
      ],
      "@codegena/ng-api-service/*": [
        "dist/ng-api-service/*",
        "libs/ng-api-service/src/*"
      ],
      "@codegena/oapi3ts-cli": [
        "dist/oapi3ts-cli",
        "libs/oapi3ts-cli/src/index.ts"
      ],
      "@codegena/oapi3ts-cli/*": [
        "dist/oapi3ts-cli/*",
        "libs/oapi3ts-cli/src/*"
      ],
      "@codegena/todo-app-scheme": [
        "dist/todo-app-scheme",
        "libs/todo-app-scheme/src/index.ts"
      ],
      "@codegena/todo-app-scheme/*": [
        "dist/todo-app-scheme/*",
        "libs/todo-app-scheme/src/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
